{
  "include": [
    "src1"
, "src1/utils.ts", "src/inspector.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES2022.Error",
      "es2021.promise"
    ],
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}